{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 80,
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["./file-types/**"]
  },
  "overrides": [
    {
      "include": [".vscode"],
      "json": {
        "parser": {
          "allowComments": true
        }
      }
    }
  ],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
