{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
      "arrowParentheses":"always",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingComma": "all",
      "quoteProperties": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false,  
      "indentStyle": "space",
      "lineWidth": 80
    },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}

